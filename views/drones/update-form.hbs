                <label for="propellers" class="form-label">Propulsores</label>
                <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}"
                    placeholder="Cantidad de propulsores">
            </div>
            <div class="mb-3">
                <label for="maxSpeed" class="form-label">Velocidad</label>
                <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}"placeholder="Velocidad mÃ¡xima">
            </div>
